{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "incremental": true,
    "jsx": "preserve",
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "@common/*": ["../../common/src/*"],
      "@admin/*": ["./src/*"],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    ".next/types/**/*.ts"
  ]
}
